-        else
-          ./configure --prefix $HDF5_DIR $EXTRA_MPI_FLAGS
-        fi
+        ./configure --prefix $HDF5_DIR \
+            ${EXTRA_MPI_FLAGS} \
+            ${ENABLE_DIRECT_VFD} \
+            ${ENABLE_BUILD_MODE}
         make -j $(nproc)
         make install
         popd

